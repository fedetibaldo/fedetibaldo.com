---
import { Tag, type TagEnum } from "../tag";

type Props = {
	class?: string | undefined;
	tag: TagEnum;
	date: Date;
};

const { tag, class: className = "", date } = Astro.props;
---

<p class={`${className} flex items-baseline gap-3`}>
	<Tag tag={tag} />
	<time class="text-smallest text-grey-200" datetime={date.toISOString()}>
		{
			date.toLocaleDateString(undefined, {
				dateStyle: "medium",
			})
		}
	</time>
</p>
